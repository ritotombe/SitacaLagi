<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.rito.sitaca.UbahKategoriActivity$PlaceholderFragment"
    android:id="@+id/ubahKategori">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*) Wajib diisi"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nama Kategori*"
                android:id="@+id/labelNamaKategori"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ubahKategoriNama"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Deskripsi Kategori*"
                android:id="@+id/label"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ubahKategoriDeskripsi"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin"  />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="#fff"
                android:id="@+id/button"
                android:layout_below="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:background="@drawable/save_button"
                android:padding="@dimen/activity_margin"
                android:layout_gravity="right" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


