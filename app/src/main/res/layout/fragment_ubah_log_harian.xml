<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rito.sitaca.UbahLogHarianActivity$PlaceholderFragment"
    android:id="@+id/ubahLogHarian">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*) Wajib diisi"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tanggal*"
                android:id="@+id/labelTanggal"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:id="@+id/tambahLogHarianTanggal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Jumlah Kehadiran"
                android:id="@+id/labelJlhHadir"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tambahLogHarianJumlahKehadiran"
                android:inputType="number"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Realisasi Jam Buka*"
                android:id="@+id/labelJamBuka"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tambahLogHarianRealisasiJamBuka"
                android:editable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Realisasi Jam Tutup*"
                android:id="@+id/labelJamTutup"
                android:textColor="#565656"
                android:layout_marginTop="@dimen/layout_marginTop" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tambahLogHarianRealisasiJamTutup"
                android:editable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/form_bg"
                android:layout_marginTop="@dimen/layout_marginTop1"
                android:padding="@dimen/activity_margin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="#fff"
                android:id="@+id/button"
                android:layout_below="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_margin"
                android:background="@drawable/save_button"
                android:padding="@dimen/activity_margin"
                android:layout_gravity="right" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
