<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:dividerHeight="0dp"
    android:id="@+id/itemList"
    android:clickable="false"
    android:background="@drawable/main_buttons">

    <CheckBox
            android:id="@+id/delCb"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:text=""
            android:clickable="true"
            android:button="@drawable/checkbox"
            android:layout_margin="@dimen/activity_margin"
            android:layout_gravity="center"
            android:gravity="center" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPeminjamanMainBox"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/main_buttons">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_margin"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="buku"
            android:id="@+id/viewBuku"
            android:layout_gravity="left|center_vertical"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="peminjam"
                android:id="@+id/viewPeminjam"
                android:layout_gravity="left|center_vertical"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/activity_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy"
                android:id="@+id/viewTanggalPinjam"
                android:layout_gravity="left|center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "
                android:layout_gravity="left|center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy"
                android:id="@+id/viewTanggalKembali"
                android:layout_gravity="left|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>